        {{#if user.account.profile.acct}}
        <div style="padding: 2px 0px;">
            <span style="font-weight: bold">Account: </span> {{user.account.profile.acct}}
        </div>
        <div style="padding: 2px 0px;">
            <span style="font-weight: bold">Expiration: </span> {{user.account.profile.expDate}}
        </div>
        {{/if}}
    </div>
    <div style="text-align: center;padding: 20px 0px;"><a href="{{serverURL}}/account" style="text-decoration: none;padding: 10px 10px; background-color: #008EDD; border-radius: 5px; color: white; border: 1px solid black;">My Account</a></div>
