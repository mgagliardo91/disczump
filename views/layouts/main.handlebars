<!DOCTYPE html>
<html>
    <head>
        <link rel="shortcut icon" href="/static/logo/favicon.ico">
        <meta name="google-site-verification" content="NnxTn6Aky5tbZ029ca1tbLozYyYkl0xMeTcP_IWu3hI" />
        {{#if isMobile}}
    	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    	{{/if}}
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" media="screen">
        {{!--<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" media="screen">--}}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/static/css/main.css">
        <style type="text/css">
            body { padding-top: 70px; }
        </style>
        <script language="javascript">
            var image = new Image();
            image.src = '/static/logo/logo_small.svg';
            
            var image2 = new Image();
            image2.src = '/static/logo/logo_block.svg';
        </script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
        <script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
        <script src="https://cdn.rawgit.com/jashkenas/underscore/master/underscore.js"></script>
        {{{_sections.head}}}
    </head>
    <body>
        {{#unless isIndex}}
        <nav class="zump-navbar navbar-inverse zump-navbar-fixed-top" role="navigation">
            <div class="container-fluid full-height">
                {{#if isMobile}}
                <div class="navbar-center navbar-btn-container full-height">
                    <div class="navbar-btn-list">
                        <span class="navbar-logo">DiscZump</span>
                    </div>
                </div>
                    {{#if user}}
                        <div class="navbar-btn-container full-height float-left">
                            <div class="navbar-btn-list">
                                <a href="#" id="nav-settings"><span><i class="fa fa-gears fa-lg"></i></span></a>
                            </div>
                        </div>
    				{{/if}}
				{{else}}
                <div class="zump-navbar-header float-left">
                    <a href="/"><img src="/static/logo/logo_text.svg" class="nav-logo"></a>
                </div>
                {{/if}}
                {{#if user}}
                <div class="navbar-btn-container full-height float-right">
                    <div class="navbar-btn-list">
                        <ul class="zump-nav">
                            <li class="zump-navbar-dropdown">
                                {{#if isMobile}}
                                    <a href="#" class="dropdown-toggle image-link" data-toggle="dropdown" role="button" aria-expanded="false"><span><i class="fa fa-user fa-lg"></i><i class="fa fa-angle-double-down fa-lg"></i></span></a>
                                {{else}}
                                    {{#if user.local.image}}
                                    <a href="#" class="dropdown-toggle image-link" data-toggle="dropdown" role="button" aria-expanded="false"><img src="{{user.local.image}}"/><span><i class="fa fa-angle-double-down fa-lg"></i></span></span></a>
                                    {{else}}
                                    <a href="#" class="dropdown-toggle image-link" data-toggle="dropdown" role="button" aria-expanded="false"><span class="user-icon-default"><i class="fa fa-user"></i></span><span><i class="fa fa-angle-double-down fa-lg"></i></span></span></a>
                                    {{/if}}
                                {{/if}}
                                <ul class="zump-navbar-dropdown-menu dropdown-menu" role="menu">
                                    {{!--{{#if isDashboard}}--}}
                                    {{!--<li><a href="#" class="btn-tools btn-export-list" role="button" id="export-list"><span><i class="fa fa-external-link fa-tools"></i></span>Export List</a></li>--}}
                                    {{!--<li class="divider"></li>--}}
                                    {{!--{{/if}}--}}
                                    <li><a href="/logout" data-ajax="false"><span><i class="fa fa-sign-out fa-tools"></i></span>Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                {{else}}
                <div class="navbar-btn-container full-height float-right">
                    <div class="navbar-btn-list">
                        {{#if route}}
                        <a href="/{{route.url}}"><span class="nav-btn">{{route.text}}</span></a>
                        {{/if}}
                        {{#if isPublicPage}}
                        <a href="/login"><span class="nav-btn">Sign In</span></a>
                        <a href="/signup"><span class="nav-btn">Sign Up</span></a>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
            </div>
        </nav>
        {{/unless}}
        <script src="/static/js/main.js"></script>
        {{{body}}}
    </body>
</html>
