<!doctype html>
<html>
<head>
    <title>DiscZump - Profile</title>
    <link rel="stylesheet" href="/static/css/profile.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-3 col-lg-2 sidebar">
                <div class="toolbar">
                    <span class="pull-left"><i class="fa fa-home fa-toolbar-icon"></i></span>
                    <span class="pull-right"><i class="fa fa-plus fa-toolbar-icon"></i></span>
                    <span class="pull-right"><i class="fa fa-filter fa-toolbar-icon"></i></span>
                    <div class="clearfix"></div>
                </div>
                <ul class="nav-sidebar">
                    <li class="active" pg-select="#pg-dashboard">Dashboard</li>
                    <li pg-select="#pg-gallery">Gallery</li>
                    <li pg-select="#pg-settings">Account Settings</li>
                    <li pg-select="#pg-preferences">Preferences</li>
                    <li pg-select="#pg-statistics">Statistics</li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-9 col-md-offset-3 col-lg-10 col-lg-offset-2">
                <div class="page" id="pg-dashboard">
                    <div class="row">
                    <div class="disc-inventory-header" id="inventory-header">
                        <div class="header-static header-row">
                            <div class="div-inline float-left" style="width: 30%">
                                <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <p class="form-control-static header-text">Display:</p>
                                        <select class="form-control input-sm" id="paginate-display-count">
                                            <option value="20">20</option>
                                            <option value="40">40</option>
                                            <option value="60">60</option>
                                            <option value="80">80</option>
                                            <option value="100">100</option>
                                            <option value="All">All</option>
                                        </select>
                                    </div>
                                </form>
                            </div>
                            <div class="div-inline float-left text-center" style="width: 40%">
                                <ul class="list-inline form-control-static" id="paginate-nav">
                                    <li class="page-static" id="page-back"><span class="glyphicon glyphicon-chevron-left"></span></li>
                                    <li class="page-static" id="page-forward"><span class="glyphicon glyphicon-chevron-right"></span></li>
                                </ul>
                            </div>
                            <div class="div-inline float-left" style="width: 30%">
                                <div class="div-inline float-left header-text text-left" style="width: 40%" id="results-header-sort">
                                    <i class="fa fa-sort"></i> Sort
                                </div>
                                <div class="div-inline float-left header-text text-right" style="width: 60%" id="results-header-count">
                                    Results: 0
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="header-dynamic header-row" id="disc-inventory-header-dynamic">
                            <div class="header-sort-container">
                                <div class="current-sort-container">
                                </div>
                                <div class="add-sort-container no-select">
                                    <div class="text-center"><span><i class="fa fa-plus-circle"></i></span> Add Field</div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="disc-inventory-container">
                        <div class="disc-inventory-body" id="filter-results">
                        </div>
                    </div>
                </div>
                </div>
                <div class="page" id="pg-gallery">
                </div>
                <div class="page" id="pg-settings">
                    <div class="row">
                        <div class="profile-image">
                            <img src="{{user.local.image}}" />
                        </div>
                        <div class="profile-status">
                            <div class="data-table">
                                <div class="data-row">
                                    <div class="data-label">Username:</div>
                                    <div class="data-value">{{user.local.email}}</div>
                                </div>
                                <div class="data-row">
                                    <div class="data-label">Status:</div>
                                    {{#if user.local.active}}
                                    <div class="data-value">Active</div>
                                    {{else}}
                                    <div class="data-value">Inactive</div>
                                    {{/if}}
                                </div>
                                <div class="data-row">
                                    <div class="data-label">Facebook:</div>
                                    {{#if user.facebook.id}}
                                    <div class="data-value">Linked</div>
                                    {{else}}
                                    <div class="data-value">Not Linked</div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="row-label">Actions</div>
                        <ul class="profile-actions">
                            <li><a href="/">Change Password</a></li>
                            <li><a href="/account/link">Link Facebook Account</a></li>
                            <li><a href="/profile/delete">Delete Account</a></li>
                        </ul>
                    </div>
                </div>
                <div class="page" id="pg-preferences">
                </div>
                <div class="page" id="pg-statistics">
                    <div class="row" style="height: 400px">
                        <div id="discByType" class="pie-chart"></div>
                    </div>
                    <div class="row">
                        <div id="discByBrand" class="pie-chart"></div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/static/js/jquery.canvasjs.min.js"></script>
    <script src="/static/js/profile.js"></script>
</body>
</html>