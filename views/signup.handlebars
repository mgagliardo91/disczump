{{#section 'head'}}
    <title>disc|zump - Sign Up</title>
    <link rel="stylesheet" href="/static/css/signup.css">
{{/section}}
<div class="signup-form-container">
    <div class="signup-form-cell">
        <div class="signup-form-center">
            <img src="/static/logo/logo_small.svg" class="main-logo" />
            {{#if message.error}}
            <div class="alert alert-danger" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <strong>Error: </strong>{{message.error}}
            </div>
            {{/if}}
            {{#if message.info}}
            <div class="alert alert-info" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <strong>Note: </strong>{{message.info}}
            </div>
            {{/if}}
            <div class="signup-form-stacked">
                <div class="input-field">
                    <div class="input-prefix-container">
                        <div class="input-prefix">
                            <span><i class="fa fa-asterisk"></i></span>
                        </div>
                    </div>
                    <div class="input-group" id="emailGroup">
                        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                        <input class="form-control" id="email" type="text" name="email" placeholder="Email" value="{{email}}" autocomplete="off" autocomplete="false" param="Email">
                    </div>
                </div>
                {{#if isMobile}}
                <div class="input-field">
                    <div class="input-prefix-container">
                        <div class="input-prefix">
                            <span><i class="fa fa-asterisk"></i></span>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        <input class="form-control" id="password" type="password" name="password" placeholder="Password" autocomplete="off" autocomplete="false" param="Password">
                    </div>
                </div>
                <div class="input-field">
                    <div class="input-prefix-container">
                        <div class="input-prefix">
                            <span><i class="fa fa-asterisk"></i></span>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        <input class="form-control" id="verify-password" type="password" placeholder="Verify Password" autocomplete="off" autocomplete="false" param="Verify Password">
                    </div>
                </div>
                {{else}}
                <div class="input-group-inline">
                    <div class="input-field inline">
                        <div class="input-prefix-container">
                            <div class="input-prefix">
                                <span><i class="fa fa-asterisk"></i></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            <input class="form-control" id="password" type="password" name="password" placeholder="Password" autocomplete="off" autocomplete="false" param="Password">
                        </div>
                    </div>
                    <div class="input-field inline">
                        <div class="input-prefix-container">
                            <div class="input-prefix">
                                <span><i class="fa fa-asterisk"></i></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            <input class="form-control" id="verify-password" type="password" placeholder="Verify Password" autocomplete="off" autocomplete="false" param="Verify Password">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                {{/if}}
                <div class="input-group-inline">
                    <div class="input-field inline">
                        <div class="input-prefix-container">
                            <div class="input-prefix">
                                <span><i class="fa fa-asterisk"></i></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user-secret fa-fw"></i></span>
                            <input class="form-control" id="username" type="text" name="username" placeholder="Username" value="{{username}}" autocomplete="off" autocomplete="false" param="Username">
                        </div>
                    </div>
                    <div id="username-feedback" class="text-left inline">
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="input-group-inline">
                    <div class="input-field inline">
                        <div class="input-prefix-container">
                            <div class="input-prefix">
                                <span><i class="fa fa-asterisk"></i></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-location-arrow fa-fw"></i></span>
                            <input class="form-control" id="zipcode" type="text" name="zipCode" placeholder="Zip Code" value="{{zipCode}}" autocomplete="off" autocomplete="false" param="Zip Code">
                        </div>
                    </div>
                    <div id="citystate" class="text-left inline">
                    </div>
                    <div class="clearfix"></div>
                </div>
                {{#if isMobile}}
                <div class="input-group inline">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    <input class="form-control" id="firstName" type="text" name="firstName" placeholder="First Name" value="{{firstName}}" autocomplete="off" autocomplete="false" param="First Name">
                </div>
                <div class="input-group inline">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    <input class="form-control" id="lastName" type="text" name="lastName" placeholder="Last Name" value="{{lastName}}" autocomplete="off" autocomplete="false" param="Last Name">
                </div>
                <div class="input-group inline">
                    <span class="input-group-addon"><i class="fa fa-trophy fa-fw"></i></span>
                    <input class="form-control" id="pdgaNumber" type="text" name="pdgaNumber" placeholder="PDGA Number" value="{{pdgaNumber}}" autocomplete="off" autocomplete="false" param="PDGA Number">
                </div>
                {{else}}
                <div class="input-group-inline">
                    <div class="input-group inline">
                        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                        <input class="form-control" id="firstName" type="text" name="firstName" placeholder="First Name" autocomplete="off" autocomplete="false" param="First Name">
                    </div>
                    <div class="input-group inline">
                        <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                        <input class="form-control" id="lastName" type="text" name="lastName" placeholder="Last Name" autocomplete="off" autocomplete="false" param="Last Name">
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="input-group-inline">
                    <div class="input-group inline">
                        <span class="input-group-addon"><i class="fa fa-trophy fa-fw"></i></span>
                        <input class="form-control" id="pdgaNumber" type="text" name="pdgaNumber" placeholder="PDGA Number" value="{{pdgaNumber}}" autocomplete="off" autocomplete="false" param="PDGA Number">
                    </div>
                    <div class="clearfix"></div>
                </div>
                {{/if}}
                <div class="input-group">
                    <div>By clicking <b>Sign Up</b>, I agree to the <a href="/terms" target="_blank">Terms and Condtions</a> and <a href="/privacy" target="_blank">Privacy Policy</a>.</div>
                </div>
                <div class="signup-btn-container">
                    <button id="submit" class="btn btn-submit btn-block" type="submit">Sign up</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{#if isRelease}}
<script src="/static/js-dist/signup.min.js"></script>
<script src="/static/js-dist/validation.min.js"></script>
{{else}}
<script src="/static/js/signup.js"></script>
<script src="/static/js/validation.js"></script>
{{/if}}
